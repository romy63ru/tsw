<Window x:Class="Tsw.WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tsw.WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="800">
    <Grid Margin="10">
        <StackPanel>
            <Button Content="Load XML" Click="LoadXml_Click" Height="30" Margin="0,0,0,10" Width="120" HorizontalAlignment="Left"/>
            <Label>Cars:</Label>
            <DataGrid ItemsSource="{Binding Cars}" AutoGenerateColumns="True" x:Name="CarsGridView" Margin="0,0,0,10" />

            <Label>Results:</Label>
            <DataGrid ItemsSource="{Binding CarSummaries}" AutoGenerateColumns="True" x:Name="ResultsGridView" IsReadOnly="True" />

        </StackPanel>
    </Grid>
</Window>
